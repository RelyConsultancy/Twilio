<?xml version="1.0" encoding="UTF-8"?>
@{
    Response.ContentType = "text/xml";
    Layout = null;

    var isWestminster = !string.IsNullOrEmpty(Request["From"]) && Request["From"].Contains("447869412356");
}
<Response>
    @if (isWestminster)
    {
        <Gather timeout="10" action="/home/gatherplanner" method="POST">
            <Play>/static/twilio/welcome-planner.mp3</Play>
        </Gather>
    }
    else
    {
        <Gather timeout="10" action="/home/gatheragent" method="POST">
            <Play>/static/twilio/welcome-agent.mp3</Play>
        </Gather>
    }
</Response>
